#include <iostream>
using namespace std;

int main() {
	int t,x,y;
	cin>>t;
	while(t-->0)
	{
		cin>>x>>y;
		if(x==y)
		{ if(x%2==0)cout<<x*2 <<endl;
		 else  cout<<x*2-1 <<endl;
		 }
		else if (x-1==y+1)
		{ if(x%2==0)cout<<x+y<<endl;
		 else  cout<<x+y-1 <<endl;
		}
	else cout<<"No Number"<<endl;
	}
	return 0;
}
